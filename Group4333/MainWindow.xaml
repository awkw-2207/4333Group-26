<Window x:Class="Group4333.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group4333"
        mc:Ignorable="d"
        Title="Инструментальные Средства Разработки Программного Обеспечения" 
        Height="700" 
        Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Информация о студенте" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия: Иванов" FontSize="14"/>
            <TextBlock Text="Имя: Иван" FontSize="14"/>
            <TextBlock Text="Возраст: 20 лет" FontSize="14"/>
            <TextBlock Text="Группа: 4333" FontSize="14"/>
            <TextBlock Text="Вариант: 1 (Excel)" FontSize="14" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="📥 Импорт данных из Excel" 
                    Width="250" Height="40" 
                    Margin="5"
                    Click="ImportButton_Click"/>

            <Button Content="📤 Экспорт в Excel" 
                    Width="250" Height="40" 
                    Margin="5"
                    Click="ExportButton_Click"/>

            <TextBlock x:Name="StatusText" 
                       Text="Готов к работе" 
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>

        <ListBox Grid.Row="2" 
                 x:Name="ServicesListBox"
                 Height="150"
                 DisplayMemberPath="Type"
                 Margin="0,10,0,0"/>
    </Grid>
</Window>